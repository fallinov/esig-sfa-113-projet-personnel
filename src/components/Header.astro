---
import Navigation from './Navigation.astro';
---

<header class="header" role="banner">
    <div class="container">
        <div class="header-content">
            <div class="header-left">
                <div class="logo">
                    <a href={`${import.meta.env.BASE_URL}`} class="logo-link">
                        <img src={`${import.meta.env.BASE_URL}img/divcom-logo.png`} alt="Divcom Logo" class="logo-icon">
                        <div class="logo-text">
                            <div class="logo-title">Module 113</div>
                            <p class="logo-subtitle">Projet Personnel HTML/CSS</p>
                        </div>
                    </a>
                </div>
                
                <!-- Bouton hamburger pour mobile -->
                <button class="mobile-menu-toggle" aria-label="Ouvrir le menu de navigation" aria-expanded="false">
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                    <span class="hamburger-line"></span>
                </button>
            </div>
            
            <Navigation />
        </div>
    </div>
</header>
