---
export interface Props {
  title: string;
  icon?: string;
  variant?: 'default' | 'highlighted' | 'minimal';
  size?: 'small' | 'medium' | 'large';
}

const { title, icon, variant = 'default', size = 'medium' } = Astro.props;
---

<div class={`consigne-card consigne-card--${variant} consigne-card--${size}`}>
  <div class="consigne-card__header">
    {icon && <span class="consigne-card__icon">{icon}</span>}
    <h3 class="consigne-card__title">{title}</h3>
  </div>
  <div class="consigne-card__content">
    <slot />
  </div>
</div>
