---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "Module 113 - Projet Personnel HTML/CSS - Développez votre autonomie en créant votre propre site web", keywords = "HTML, CSS, développement web, projet personnel, ESIG, apprentissage autonome" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="Steve Fallet - ESIG">
    <title>{title} | Module 113 - ESIG</title>
    
    <!-- Polices locales - Preload uniquement les polices Poppins (Inter supprimé car corrompu) -->
    <link rel="preload" href={`${import.meta.env.BASE_URL}fonts/poppins-var.woff2`} as="font" type="font/woff2" crossorigin>
    <link rel="preload" href={`${import.meta.env.BASE_URL}fonts/poppins-bold.woff2`} as="font" type="font/woff2" crossorigin>
    <link rel="preload" href={`${import.meta.env.BASE_URL}fonts/poppins-regular.woff2`} as="font" type="font/woff2" crossorigin>
    
    <!-- CSS principal -->
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}css/normalize.css`}>
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}css/style.css`}>
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}css/icons.css`}>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}img/divcom-logo.png`}>
</head>
<body>
    <!-- Skip to main content pour l'accessibilité -->
    <a href="#main-content" class="skip-link">Passer au contenu principal</a>
    
    <!-- Header -->
    <Header />
    
    <!-- Main content -->
    <main id="main-content" class="main-content" role="main">
        <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
    
    <!-- Scripts -->
    <script src={`${import.meta.env.BASE_URL}js/lucide.js`} is:inline></script>
    <script src={`${import.meta.env.BASE_URL}js/emoji-replacer.js`} is:inline></script>
    <script src={`${import.meta.env.BASE_URL}js/dropdown-menu.js`} is:inline></script>
</body>
</html>