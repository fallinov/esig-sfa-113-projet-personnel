---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
}

const { title, description = "Module 113 - Projet Personnel HTML/CSS - Développez votre autonomie en créant votre propre site web", keywords = "HTML, CSS, développement web, projet personnel, ESIG, apprentissage autonome" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="Steve Fallet - ESIG">
    <title>{title} | Module 113 - ESIG</title>
    
    <!-- Polices locales -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/poppins-var.woff2" as="font" type="font/woff2" crossorigin>
    
    <!-- CSS principal -->
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/icons.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/img/divcom-logo.png">
</head>
<body>
    <!-- Skip to main content pour l'accessibilité -->
    <a href="#main-content" class="skip-link">Passer au contenu principal</a>
    
    <!-- Header -->
    <Header />
    
    <!-- Main content -->
    <main id="main-content" class="main-content" role="main">
        <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
    
    <!-- Scripts -->
    <script src="/js/lucide.js" is:inline></script>
    <script src="/js/emoji-replacer.js" is:inline></script>
</body>
</html>
